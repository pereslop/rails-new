$("<%=j render @posts %>").appendTo($("#posts"));
// Update pagination link
<% if @posts.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page @posts, 'Next Page', params: {controller: 'users', action: 'show'}, remote: true %>");
<% end %>